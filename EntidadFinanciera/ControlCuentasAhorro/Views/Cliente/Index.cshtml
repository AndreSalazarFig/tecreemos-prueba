@model IEnumerable<ClienteVM>
@{
    ViewData["Title"] = "Lista de clientes";

}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-success alert-dismissible fade show" role="alert" @(ViewBag.Message == null ? "style=display:none" : "")>
    @(ViewBag.Message != null ? ViewBag.Message : "")
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="row">
    <div class="col-12">
        <a asp-action="Crear" asp-controller="Cliente" class="btn btn-success float-right">Agregar nuevo</a>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-12">
        <table id="tblClientes" class="table table-bordered table-hover">
            <thead>
                <tr>
                    @*<th>IdCliente</th>*@
                    <th>Nombre(s)</th>
                    <th>Apellido paterno</th>
                    <th>Apellido materno</th>
                    <th>Número de cliente</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.Nombre</td>
                            <td>@cliente.ApellidoPaterno</td>
                            <td>@cliente.ApellidoMaterno</td>
                            <td>@cliente.NumeroCliente</td>
                            <td>
                                <a href="@Url.Action("Editar", "Cliente", new { idcliente = cliente.IdCliente })" class="btn btn-sm btn-primary">Editar</a>
                                <a href="@Url.Action("Gestionar", "CuentaAhorro", new { idcliente = cliente.IdCliente })" class="btn btn-sm btn-primary">Cuentas</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No se encontraron datos</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
